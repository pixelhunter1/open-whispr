{
  "name": "open-whispr",
  "version": "1.0.11",
  "description": "A desktop dictation application using OpenAI Whisper for speech-to-text transcription",
  "main": "main.js",
  "private": true,
  "scripts": {
    "compile:globe": "node scripts/build-globe-listener.js",
    "prestart": "npm run compile:globe",
    "start": "electron .",
    "predev": "npm run compile:globe",
    "dev": "concurrently -k -r \"npm:dev:renderer\" \"npm:dev:main\"",
    "predev:main": "npm run compile:globe",
    "dev:main": "cross-env NODE_ENV=development electron . --dev",
    "dev:renderer": "cd src && vite",
    "prebuild": "npm run compile:globe",
    "build": "cd src && vite build && cd .. && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "build:renderer": "cd src && vite build",
    "prebuild:mac": "npm run compile:globe",
    "build:mac": "npm run build:renderer && electron-builder --mac",
    "prebuild:win": "npm run compile:globe",
    "build:win": "npm run build:renderer && electron-builder --win",
    "prebuild:linux": "npm run compile:globe",
    "build:linux": "npm run build:renderer && electron-builder --linux",
    "setup": "node setup.js",
    "prepack": "npm run compile:globe",
    "pack": "npm run build:renderer && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --dir",
    "predist": "npm run compile:globe",
    "dist": "npm run build:renderer && electron-builder",
    "lint": "cd src && eslint .",
    "lint:fix": "cd src && eslint . --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "preview": "cd src && vite preview",
    "clean": "node cleanup.js"
  },
  "keywords": [
    "dictation",
    "speech-to-text",
    "whisper",
    "openai",
    "electron",
    "desktop-app"
  ],
  "author": {
    "name": "OpenWhispr Team",
    "email": "support@openwhispr.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron/notarize": "^3.0.1",
    "@eslint/js": "^9.25.0",
    "@tailwindcss/vite": "^4.1.10",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "electron": "^36.5.0",
    "electron-builder": "^24.6.4",
    "eslint": "^9.25.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.10",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "better-sqlite3": "^11.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.3.1",
    "electron-updater": "^6.6.2",
    "ffmpeg-static": "^5.2.0",
    "lucide-react": "^0.518.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "shadcn-ui": "^0.9.5",
    "tailwind-merge": "^3.3.1",
    "tar": "^7.4.3",
    "tw-animate-css": "^1.3.4",
    "unzipper": "^0.12.3"
  }
}
